<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.socialnetwork.controller.MyMessagesController">
    <children>
        <Text fill="#8477bf" layoutX="35.0" layoutY="62.0" strokeType="OUTSIDE" strokeWidth="0.0" text="My Messages">
            <font>
                <Font name="Calibri" size="48.0" />
            </font>
        </Text>
        <TableView fx:id="messagesTableView" layoutX="35.0" layoutY="100.0" onMouseClicked="#messageSelected" prefHeight="232.0" prefWidth="213.0">
            <columns>
                <TableColumn fx:id="fromColumn" prefWidth="75.0" text="From" />
                <TableColumn fx:id="subjectColumn" prefWidth="137.0" text="Subject" />
            </columns>
        </TableView>
        <Button fx:id="backButton" layoutX="36.0" layoutY="352.0" mnemonicParsing="false" onAction="#backButtonClicked" prefHeight="25.0" prefWidth="213.0" text="Back home" textFill="#8477bf">
            <font>
                <Font name="Calibri Bold" size="14.0" />
            </font>
        </Button>
      <Pane layoutX="318.0" layoutY="116.0" prefHeight="200.0" prefWidth="200.0" style="-fx-background-color: #8477bf;">
         <children>
            <Text fx:id="messageText" accessibleRole="TEXT_AREA" fill="WHITE" fontSmoothingType="LCD" layoutX="8.0" layoutY="82.0" strokeType="OUTSIDE" strokeWidth="0.0" textOrigin="TOP" wrappingWidth="184.0">
               <font>
                  <Font name="Calibri Bold Italic" size="18.0" />
               </font>
            </Text>
         </children>
      </Pane>
    </children>
</AnchorPane>
